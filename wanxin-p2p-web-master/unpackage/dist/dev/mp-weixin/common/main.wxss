	font-size: 22px;
}
/* 常用样式 */
.cl-main{
	color: #656794;
}
.cl-org{
	color: #ffa501;
}
.cl-red{
	color: #f94744;
}
.cl-blue{
	color: #4f57eb;
}
.text-algin-lt{
	text-align: left;
}
.text-algin-rt{
	text-align: right;
}
.text-algin-cn{
	text-align: center;
}
.box-dis-flex{
	display: flex;
}
/* 清除边框 */
.clborder{
	border:none !important;
}
/* 标题 */
.labTitle{
	margin:10rpx 30rpx 0rpx 30rpx;
}
.itemsBlock{
	padding:30rpx;
	margin:30rpx;
	border-radius: 10rpx;
	font-size: 24rpx;
	box-shadow: 0 0 10rpx #e2e2e2;
}
.cardsBlock{
	padding:30rpx;
	margin:20rpx 30rpx;
	border-radius: 10rpx;
	font-size: 24rpx;
	box-shadow: 0 0 10rpx #e2e2e2;
}
/* 底部样式 */
.footer{
	position: fixed;
	width: 100%;
	left: 0;
	bottom: 0;
	border-top:solid 1px #e2e2e2;
	display: flex;
	background: #fff;
	line-height: 100rpx;
	color:#666;
	font-size: 28rpx;
}
.footer .lt{
	flex: 1;
	display: flex;
	justify-content: space-between;
	padding:0 30rpx;
}
.footer .lt .tit{
	color:#999;
}
.footer .rt{
	padding: 0 60rpx;
	background: #4f57eb;
	color:#fff;
	font-size: 32rpx;
}
/* tab bar */
.uni-tab-bar {
	display: flex;
	flex: 1;
	flex-direction: column;
	overflow: hidden;
}
.uni-tab-bar .list {
	width: 750rpx;
	height: 100%;
}
.uni-swiper-tab {
	width: 100%;
	white-space: nowrap;
	line-height: 100rpx;
	height: 100rpx;
}
.swiper-tab-list {
	font-size: 30rpx;
	width: 150rpx;
	display: inline-block;
	text-align: center;
	color: #555;
}
.uni-tab-bar .active {
	color: #007AFF;
}
.uni-tab-bar .swiper-box {
	flex: 1;
	width: 100%;
	height: calc(100% - 100rpx);
}
.uni-tab-bar-loading{
	padding:20rpx 0;
}
















